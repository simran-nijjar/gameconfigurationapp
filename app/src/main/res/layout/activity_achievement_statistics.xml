<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AchievementStatistics"
    android:background="@drawable/appbackground">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/stats_graph"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/statisticsMsg"
        tools:layout_editor_absoluteX="0dp"></com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/statisticsMsg"
        android:layout_width="206dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="To check which number matches with which level name, click &quot;Levels&quot;"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/levelsBtn"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:text="Levels"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/statisticsMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/statisticsMsg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
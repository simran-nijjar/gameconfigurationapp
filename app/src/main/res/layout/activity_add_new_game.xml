<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".AddNewGame">


    <TextView
        android:id="@+id/txtSelectTheme2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select a theme:"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="@+id/gameName"
        app:layout_constraintTop_toBottomOf="@+id/gameName" />

    <RadioGroup
        android:id="@+id/radioBtnsThemes"
        android:layout_width="315dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/txtSelectTheme2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtSelectTheme2"
        app:layout_constraintTop_toBottomOf="@+id/txtSelectTheme2" />

    <Spinner
        android:id="@+id/gameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/num_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/num_player"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/radioBtnsThemes"
        app:layout_constraintTop_toBottomOf="@+id/radioBtnsThemes" />

    <TextView
        android:id="@+id/combined_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/combined_score"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/player_msg"
        app:layout_constraintTop_toBottomOf="@+id/num_players" />

    <EditText
        android:id="@+id/num_players_input"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/radioBtnsThemes"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toEndOf="@+id/num_players"
        app:layout_constraintTop_toBottomOf="@+id/radioBtnsThemes" />

    <EditText
        android:id="@+id/combined_score_input"
        android:layout_width="65dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@+id/num_players_input"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/combined_score"
        app:layout_constraintTop_toBottomOf="@+id/num_players_input" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="@+id/score_msg"
        app:layout_constraintTop_toBottomOf="@+id/combined_score" />

    <TextView
        android:id="@+id/player_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/score_msg"
        app:layout_constraintStart_toStartOf="@+id/num_players"
        app:layout_constraintTop_toBottomOf="@+id/num_players"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/score_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/combined_score"
        app:layout_constraintTop_toBottomOf="@+id/combined_score"
        app:layout_constraintVertical_bias="0.003" />

</androidx.constraintlayout.widget.ConstraintLayout>